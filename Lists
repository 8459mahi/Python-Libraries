# List Functions
b=["Ironman","Thor","hulk","Captain america","hulk"]
print(b)

# to find the length of a list.
print(len(b))

# to count an occurence of a particular element.
print(b.count("hulk"))

# to add element in the list. add element last
b.append("Spiderman")
print(b)

# to add to specific location.
b.insert(1,"Vision")
print(b)

# to remove from a list.
b.remove("hulk")
print(b)

# to remove from a certain location.means index based remove element.
print(b.pop(2))
print(b)

#to create a copy of a list.
a=["Ironman","Thor","hulk","Captain america","hulk"]
b=a.copy()
print(b)

# to access an element.
print(a.index("Ironman"))
print(a.index("Thor"))

# to extend the list. add another list
c=["vision","spiderman"]
a.extend(c)
print(a)

# to reverse the list
a.reverse()
print(a)

# to sort the list.
a.sort()
print(a)

d=[3,4,2,1,7,6,8]
d.sort()
print(d)

# to clear all the data from the list.
a.clear()
print(a)

d.clear()
print(d)

# List Comprehension
l1=[10,30,20,50,60]

l2=[]
for i in l1:
    l2.append(i)
print(l1)

# option 2
for i in l1:
    if i>45:
        l2.append(i)
print(l1,"\n",l2)

# option3
l3=[i for i in l1 if i>45]
print(l3)
